@model IEnumerable<DTO.Evenement>


@{
    ViewBag.Title = "Evenementen";
}
<head>  
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/index.css" />
</head>
<header class="d-flex justify-content-center py-3">
    <ul class="nav nav-pills">
        <li class="nav-item"><a href="/Evenement/" class="nav-link active" aria-current="page">Organisator</a></li>
        <li class="nav-item"><a href="/Registratie" class="nav-link">Aanmelden</a></li>
    </ul>
</header>
<h2>Evenementen</h2>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Naam</th>
            <th>Datum</th>
            <th>Max. aantal bezoekers</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evenement in Model)
        {
            <tr>
                <td>@evenement.ID</td>
                <td>@evenement.Naam</td>
                <td>@evenement.Datum.ToString("d")</td>
                <td>@evenement.MaximumAantalBezoekers</td>
                <td>

                    <form action="/Evenement/Bewerken" method="get">
                        <input type="hidden" name="id" value="@evenement.ID" />
                        <input type="submit" value="Bewerken" class="button" />
                    </form>

                    <form action="/Evenement/Verwijderen" method="post">
                        <input type="hidden" name="id" value="@evenement.ID" />
                        <input type="submit" value="Verwijderen" class="button" />
                    </form>
                </td>
            </tr>
        }

       

    </tbody>
</table>

<a href="/Evenement/Aanmaken" class="button">Nieuw Evenement</a>